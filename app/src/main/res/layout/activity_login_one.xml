<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginOneVM" type="com.nancysapplication.app.modules.loginone.data.viewmodel.LoginOneVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnforgotpassword"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_128pxv"
        android:layout_marginEnd="@dimen/_52pxh"
        android:layout_marginStart="@dimen/_45pxh"
        android:layout_marginTop="@dimen/_60pxv"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true" android:gravity="start"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearLoginOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <ImageView android:id="@+id/imageImageremovebg"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_44pxh"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_width="@dimen/_155pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_imageremovebg"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_imageremovebg"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_radius_24"
                    android:ellipsize="end"
                    android:hint="@string/lbl_email_address"
                    android:id="@+id/etButton"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_106pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:text="@={loginOneVM.loginOneModel.etButtonValue}"
                    android:textColorHint="@color/gray_900_7e"
                    style="@style/etSolidRounded" tools:ignore="Autofill"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_radius_24"
                    android:ellipsize="end"
                    android:hint="@string/lbl_password"
                    android:id="@+id/etButtonOne"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_47pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_19pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_27pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:text="@={loginOneVM.loginOneModel.etButtonOneValue}"
                    android:textColorHint="@color/gray_900_7e"
                    style="@style/etSolidRounded" tools:ignore="Autofill"/>
                <TextView android:ellipsize="end"
                    android:gravity="start"
                    android:id="@+id/txtForgotpassword"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_43pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{loginOneVM.loginOneModel.txtForgotpassword}"
                    style="@style/txtPlusJakartaSansromanmedium20" tools:text="@string/msg_forgot_password"/>

                <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                    android:id="@+id/indicatorArrowdown"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_77pxv"
                    android:layout_width="wrap_content"
                    app:drawable_normal="@drawable/indicator_unselected_bg_red_300_7f_radius_8"
                    app:drawable_selected="@drawable/indicator_selected_bg_red_301_radius_8"
                    app:indicator_size="@dimen/_12pxh" app:indicator_spacing="@dimen/_10pxh"/>

                <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                    android:id="@+id/indicatorTelevision"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_131pxh"
                    android:layout_marginStart="@dimen/_131pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="wrap_content"
                    app:drawable_normal="@drawable/indicator_unselected_bg_white_a700_7f_radius_8"
                    app:drawable_selected="@drawable/indicator_selected_bg_white_a700_radius_8"
                    app:indicator_size="@dimen/_12pxh" app:indicator_spacing="@dimen/_10pxh"/>
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameStackbackgroundrect"
                    android:layout_height="@dimen/_92pxv"
                    android:layout_marginTop="@dimen/_30pxv" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imageBackgroundrect"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_92pxh"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_46pxh}"
                        imageRes="@{@drawable/img_backgroundrect}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_backgroundrect"/>
                    <FrameLayout
                        android:id="@+id/frameStackrectangleone"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_91pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_1pxh" android:layout_width="@dimen/_332pxh">
                        <ImageView android:id="@+id/imageRectangleOne"
                            android:layout_gravity="start"
                            android:layout_height="@dimen/_91pxh"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            cornerRadius="@{@dimen/_45pxh}"
                            imageRes="@{@drawable/img_rectangle1}"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle1"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtLogin"
                            android:layout_gravity="bottom|center"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_23pxv"
                            android:layout_marginEnd="@dimen/_124pxh"
                            android:layout_marginStart="@dimen/_124pxh"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_1pxh"
                            android:singleLine="true"
                            android:text="@{loginOneVM.loginOneModel.txtLogin}"
                            style="@style/txtLatobold36" tools:text="@string/lbl_login"/>
                    </FrameLayout>
                </FrameLayout>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtYoucanalsolo"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{loginOneVM.loginOneModel.txtYoucanalsolo}"
                    style="@style/txtLatobold20" tools:text="@string/msg_you_can_also_lo"/>
                <ImageView android:id="@+id/imageGroupSeventyNine"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_27pxh"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="@dimen/_148pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group79"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group79"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_22pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{loginOneVM.loginOneModel.txtConfirmation}"
                    style="@style/txtPlusJakartaSansromanmedium20_1" tools:text="@string/msg_don_t_have_an_a"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
